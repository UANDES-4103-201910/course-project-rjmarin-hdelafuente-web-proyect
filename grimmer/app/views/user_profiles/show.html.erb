<p id="notice"><%= notice %></p>
<style>
  .fakeimg {
    height: 180px;
    width: 200px;
    background: #aaa;
  }
</style>
<div class="container">
  <div class="card-body bg-light">

    <div class="fakeimg">
      <p class="text-center">Profile Picture</p>
    </div>

    <p class="text-lg-center" style="font-size: 30px"><%= @user_profile.name %> <%= @user_profile.last_name %></p>

    <p>
      <strong>Email: </strong>
      <%= @user_profile.user.email %>
    </p>

  </div>

  <div class="card-body bg-light" style="margin-top: 20px">

    <%= button_to 'Edit Info', edit_user_profile_path(@user_profile), :class => "btn btn-sm btn-outline-primary", :method => "get"%>

    <p class="text-center">
      <strong>About me</strong>
      <br>
      <%= @user_profile.bio %>
    </p>

    <p class="text-center">
      <strong>City</strong>
      <br>
      <%= @user_profile.city %>
    </p>

    <p class="text-center">
      <strong>Country</strong>
      <br>
      <%= @user_profile.country %>
    </p>

  </div>

  <div class="card-body bg-light" style="margin-top: 20px">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Title...">
      <br>
      <textarea class="form-control" rows="5" placeholder="Bitch about someone or something..."></textarea>
      <br>
      <div class="form-check-inline">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="public">Public
        </label>
      </div>
      <div class="form-check-inline">
        <input type="file" class="form-control-file border">
      </div>
      <div class="form-check-inline">
        <button class="btn btn-primary"  type="submit">Post</button>
      </div>
    </div>
  </div>
  <% @posts.each do |post| %>

    <div class="card-header">
      <h6 style="text-align: right"><%= post.updated_at%></h6>
      <div>
        <button class="btn btn-link" style="float: right">location</button>
        <h5><%=UserProfile.select("name").where("user_id", post.user_id)[0].name%> <%=UserProfile.select("last_name").where("user_id", post.user_id)[0].last_name%></h5>
      </div>
    </div>
    <div class="card-body bg-light">
      <h2><%= post.title%></h2>
      <p><%=post.description %></p>
      <div class="fakeimg">Fake Image</div>
      <div style="margin-top: 15px" >
        <button class="btn btn-info">Like</button>
        <button class="btn btn-info">DisLike</button>
        <button class="btn btn-info">Report</button>
        <button class="btn btn-info">Share</button>
        <button class="btn btn-info">Follow</button>
      </div>
      <div class="input-group " style="margin-top:30px">
        <input type="text" class="form-control" placeholder="Comment">
        <div class="input-group-append">
          <button class="btn btn-success" type="submit">comment</button>
        </div>
      </div>

      <%comments = PostComment.where("post_id", post.id ) %>
      <%comments.each do |comment| %>
        <%if(comment.post_id == post.id) %>
          <div class=" card card-body " style="margin-top:10px">
            <h5><%=UserProfile.select("name").where("user_id ", comment.user_id)[0].name %> <%=UserProfile.select("last_name").where("user_id ", comment.user_id)[0].last_name %>:</h5><%=comment.comment %>
          </div>
        <%end %>
      <%end %>
    </div>
    <br>
  <%end %>

</div>