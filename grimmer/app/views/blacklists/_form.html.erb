<%= form_with(model: blacklist, local: true) do |form| %>
  <% if blacklist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blacklist.errors.count, "error") %> prohibited this blacklist from being saved:</h2>

      <ul>
      <% blacklist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container" style="display: flex">
    <div id="form" style="flex: 1">
      <div class="field">
        <%= form.label :user_id %>
        <strong>*Write the user id</strong><br>
        <%= form.text_field :user_id %>
      </div>

      <div class="field">
        <%= form.label :start_date %>
        <%= form.datetime_select :start_date %>
      </div>

      <div class="field">
        <%= form.label :ending_date %>
        <%= form.datetime_select :ending_date %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
    <div id="user_managment" style="flex: 2">
      <table class="table table-striped table-bordered" id="user_table">
        <thead>
        <strong> Users</strong>
        <tr>
          <th style="text-align: center; width: 75px">Id</th>
          <th style="text-align: center; width: 200px">Email</th>
          <th style="align-content: center; width: 75px">Actions</th>
        </tr>
        </thead>
        <tbody id="user_table_body">
        <% @all_users.each do |user| %>
          <!-- Body -->
          <tr>
            <td id="user-<%= user.id%>"><%= user.id%></td>
            <td><%= user.email%></td>
            <td>
              <%= link_to "", user_profile_path(id: user.id), method: :get, class: 'btn btn-sm btn-primary fas fa-eye', title: 'Go to profile' %>
              <%= link_to "", edit_admin_path(id: user.id), method: :get, class: 'btn btn-sm btn-primary far fa-edit', title: 'Edit' %>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>

<% end %>
